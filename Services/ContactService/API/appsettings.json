{
  "Api": {
    "Title": "Contact Service API",
    "Version": "v1",
    "Description": "REST API for managing contact records and communication data. Provides endpoints for contact management, search capabilities, and comprehensive contact information handling.",
    "Contact": {
      "Name": "Contact Service Team",
      "Email": "contact-service@company.com"
    },
    "License": {
      "Name": "MIT",
      "Url": "https://opensource.org/licenses/MIT"
    },
    "TermsOfService": "https://company.com/terms"
  },
  "Authentication": {
    "Jwt": {
      "SecretKey": "your-secret-key-must-be-at-least-32-characters-long-for-contact-service-api",
      "Issuer": "ContactService",
      "Audience": "ContactService-API",
      "ExpiryMinutes": "60",
      "ValidateIssuer": true,
      "ValidateAudience": true,
      "ValidateLifetime": true,
      "ValidateIssuerSigningKey": true
    },
    "ApiKey": {
      "Enabled": false,
      "HeaderName": "X-API-Key",
      "ApiKeys": []
    }
  },
  "Cors": {
    "AllowedOrigins": ["https://localhost:3000", "https://contact-frontend.com", "https://localhost:5234", "https://localhost:7001", "http://localhost:5000", "http://localhost:7000"],
    "AllowedMethods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"],
    "AllowedHeaders": ["Content-Type", "Authorization", "X-Correlation-ID", "X-API-Key"],
    "AllowCredentials": true,
    "ExposedHeaders": ["X-Correlation-ID"]
  },
  "RateLimiting": {
    "PermitLimit": 100,
    "Window": "00:01:00",
    "QueueLimit": 10,
    "AutoReplenishment": true
  },
  "SecurityHeaders": {
    "EnableHsts": true,
    "HstsMaxAge": 31536000,
    "EnableContentSecurityPolicy": true,
    "ContentSecurityPolicy": "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https:; style-src 'self' 'unsafe-inline' https:; font-src 'self' https: data:; img-src 'self' https: data:; connect-src 'self' https: wss: ws:;",
    "EnableXFrameOptions": true,
    "XFrameOptions": "DENY",
    "EnableXContentTypeOptions": true,
    "EnableReferrerPolicy": true,
    "ReferrerPolicy": "strict-origin-when-cross-origin"
  },
  "HealthChecks": {
    "Database": {
      "Enabled": true,
      "Timeout": "00:00:30"
    },
    "Memory": {
      "Enabled": true,
      "ThresholdMB": 512
    },
    "Dependencies": {
      "Enabled": false,
      "Endpoints": []
    }
  },
  "Validation": {
    "ValidateOnStartup": true,
    "StrictMode": true
  },
  "Documentation": {
    "UseScalar": true,
    "UseSwagger": false,
    "IncludeXmlComments": true
  },
  "Cache": {
    "KeyPrefix": "contactapi:",
    "DefaultExpiration": "00:30:00"
  },
  "ConnectionStrings": {
    "Redis": "localhost:6379"
  },
  "OpenTelemetry": {
    "ServiceName": "ContactService",
    "ServiceVersion": "1.0.0",
    "UseConsoleExporter": true,
    "UseOtlpExporter": false,
    "OtlpEndpoint": "http://localhost:4317",
    "Logging": {
      "IncludeFormattedMessage": true,
      "IncludeScopes": true
    },
    "Tracing": {
      "Enabled": true,
      "AspNetCore": true,
      "HttpClient": true,
      "EntityFrameworkCore": true
    },
    "Metrics": {
      "Enabled": true,
      "AspNetCore": true,
      "HttpClient": true,
      "Runtime": true
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "BuildingBlocks.API": "Information"
    }
  },
  "AllowedHosts": "*"
}