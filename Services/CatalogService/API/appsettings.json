{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=Storesdb;Trusted_Connection=true;TrustServerCertificate=true;"
  },
  "Api": {
    "Title": "Catalog Service API",
    "Version": "v1.0",
    "Description": "Product catalog management service for the awesome retail system"
  },
  "Authentication": {
    "Enabled": false
  },
  "OpenTelemetry": {
    "ServiceName": "CatalogService.API",
    "ServiceVersion": "1.0.0",
    "Exporters": {
      "Console": {
        "Enabled": true
      },
      "Otlp": {
        "Enabled": false,
        "Endpoint": "http://localhost:4317",
        "Headers": ""
      }
    },
    "Logging": {
      "Enabled": true,
      "IncludeFormattedMessage": true,
      "IncludeScopes": true,
      "ParseStateValues": true
    },
    "Tracing": {
      "Enabled": true,
      "AspNetCore": true,
      "HttpClient": true,
      "EntityFrameworkCore": true,
      "AdditionalSources": []
    },
    "Metrics": {
      "Enabled": true,
      "AspNetCore": true,
      "HttpClient": true,
      "Runtime": true,
      "AdditionalMeters": []
    }
  }
}