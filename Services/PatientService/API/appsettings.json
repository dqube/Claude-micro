  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "BuildingBlocks.API": "Information"
    }
  },
  "Email": {
    "Provider": "Smtp",
    "DefaultFromAddress": "noreply@patientservice.com",
    "DefaultFromName": "Patient Service",
    "EnableSsl": true,
    "TimeoutSeconds": 30,
    "Smtp": {
      "Host": "localhost",
      "Port": 587,
      "Username": "",
      "Password": "",
      "UseAuthentication": false
    },
    "Templates": {
      "TemplatesPath": "EmailTemplates"
    }
  },
  "HttpClient": {
    "BaseAddress": "",
    "TimeoutSeconds": 30,
    "DefaultHeaders": {},
    "Retry": {
      "Enabled": true,
      "MaxAttempts": 3,
      "BaseDelayMilliseconds": 1000,
      "BackoffMultiplier": 2.0,
      "MaxDelayMilliseconds": 30000,
      "RetryStatusCodes": [408, 429, 500, 502, 503, 504]
    },
    "CircuitBreaker": {
      "Enabled": true,
      "FailureThreshold": 5,
      "SamplingDurationSeconds": 60,
      "MinimumThroughput": 10,
      "DurationOfBreakSeconds": 30
    }
  },
  "HealthChecks": {
    "Database": {
      "Enabled": true,
      "Name": "Database",
      "TimeoutSeconds": 30,
      "Tags": ["database", "sql"]
    },
    "Memory": {
      "Enabled": true,
      "Name": "Memory",
      "ThresholdBytes": 1073741824,
      "Tags": ["memory", "system"]
    },
    "Http": {
      "Enabled": false,
      "Name": "ExternalAPI",
      "Url": "",
      "TimeoutSeconds": 10,
      "ExpectedStatusCodes": [200],
      "Tags": ["http", "external"]
    },
    "Redis": {
      "Enabled": false,
      "Name": "Redis",
      "ConnectionString": "",
      "TimeoutSeconds": 10,
      "Tags": ["redis", "cache"]
    },
    "Smtp": {
      "Enabled": false,
      "Name": "Smtp",
      "Host": "",
      "Port": 587,
      "TimeoutSeconds": 10,
      "Tags": ["smtp", "email"]
    }
  },
  "AllowedHosts": "*"
}