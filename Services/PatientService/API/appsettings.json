{
  "Api": {
    "Title": "Patient Service API",
    "Version": "v1",
    "Description": "REST API for managing patient records and healthcare data. Provides endpoints for patient registration, contact updates, and patient information retrieval with comprehensive search and filtering capabilities.",
    "Contact": {
      "Name": "Patient Service Team",
      "Email": "patient-service@healthcare.com"
    },
    "License": {
      "Name": "MIT",
      "Url": "https://opensource.org/licenses/MIT"
    },
    "TermsOfService": "https://healthcare.com/terms"
  },
  "Authentication": {
    "Jwt": {
      "SecretKey": "your-secret-key-must-be-at-least-32-characters-long-for-patient-service-api",
      "Issuer": "PatientService",
      "Audience": "PatientService-API",
      "ExpiryMinutes": 60,
      "ValidateIssuer": true,
      "ValidateAudience": true,
      "ValidateLifetime": true,
      "ValidateIssuerSigningKey": true
    },
    "ApiKey": {
      "Enabled": false,
      "HeaderName": "X-API-Key",
      "ApiKeys": []
    }
  },
  "Cors": {
    "AllowedOrigins": ["https://localhost:3000", "https://healthcare-frontend.com", "https://localhost:5234", "https://localhost:7001", "http://localhost:5000", "http://localhost:7000"],
    "AllowedMethods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"],
    "AllowedHeaders": ["Content-Type", "Authorization", "X-Correlation-ID", "X-API-Key"],
    "AllowCredentials": true,
    "ExposedHeaders": ["X-Correlation-ID"]
  },
  "RateLimiting": {
    "PermitLimit": 100,
    "Window": "00:01:00",
    "QueueLimit": 10,
    "AutoReplenishment": true
  },
  "SecurityHeaders": {
    "EnableHsts": true,
    "HstsMaxAge": 31536000,
    "EnableContentSecurityPolicy": true,
    "ContentSecurityPolicy": "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https:; style-src 'self' 'unsafe-inline' https:; font-src 'self' https: data:; img-src 'self' https: data:; connect-src 'self' https: wss: ws:;",
    "EnableXFrameOptions": true,
    "XFrameOptions": "DENY",
    "EnableXContentTypeOptions": true,
    "EnableReferrerPolicy": true,
    "ReferrerPolicy": "strict-origin-when-cross-origin"
  },
  "Validation": {
    "ValidateOnStartup": true,
    "StrictMode": true
  },
  "Documentation": {
    "UseScalar": true,
    "UseSwagger": false,
    "IncludeXmlComments": true
  },
  "Cache": {
    "KeyPrefix": "patientapi:",
    "DefaultExpiration": "00:30:00"
  },
  "ConnectionStrings": {
    "Redis": "localhost:6379"
  },
  "OpenTelemetry": {
    "ServiceName": "PatientService.API",
    "ServiceVersion": "1.0.0",
    "Exporters": {
      "Console": {
        "Enabled": true
      },
      "Otlp": {
        "Enabled": false,
        "Endpoint": "http://localhost:4317",
        "Headers": ""
      }
    },
    "Logging": {
      "Enabled": true,
      "IncludeFormattedMessage": true,
      "IncludeScopes": true,
      "ParseStateValues": true
    },
    "Tracing": {
      "Enabled": true,
      "AspNetCore": true,
      "HttpClient": true,
      "EntityFrameworkCore": true,
      "AdditionalSources": []
    },
    "Metrics": {
      "Enabled": true,
      "AspNetCore": true,
      "HttpClient": true,
      "Runtime": true,
      "AdditionalMeters": []
    },
    "Redaction": {
      "Enabled": true,
      "RedactionText": "[PHI_REDACTED]",
      "Mode": "Full",
      "SensitiveFields": [
        "patientid",
        "patient_id",
        "mrn",
        "medical_record_number",
        "medicalrecordnumber",
        "firstname",
