{
  "Api": {
    "Title": "Patient API",
    "Version": "v1",
    "Description": "API Documentation"
  },
  "Authentication": {
    "Jwt": {
      "SecretKey": "your-secret-key-must-be-at-least-32-characters-long",
      "Issuer": "YourApp",
      "Audience": "YourApp-API",
      "ExpiryMinutes": "60"
    }
  },
  "Cors": {
    "AllowedOrigins": ["https://localhost:3000"],
    "AllowedMethods": ["GET", "POST", "PUT", "DELETE"],
    "AllowedHeaders": ["*"]
  },
  "RateLimiting": {
    "PermitLimit": 100,
    "Window": "00:01:00"
  },
  "Cache": {
    "KeyPrefix": "patientapi:",
    "DefaultExpiration": "00:30:00"
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=PatientDb;Trusted_Connection=true;TrustServerCertificate=true;",
    "Redis": "localhost:6379"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}