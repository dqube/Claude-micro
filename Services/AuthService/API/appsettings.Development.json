{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "BuildingBlocks.API": "Debug",
      "AuthService": "Debug"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=AuthServiceDb;Trusted_Connection=true;MultipleActiveResultSets=true;",
    "Redis": "localhost:6379"
  },
  "Authentication": {
    "Jwt": {
      "SecretKey": "development-secret-key-for-auth-service-must-be-at-least-32-characters-long-dev",
      "Issuer": "AuthService-Dev",
      "Audience": "AuthService-API-Dev"
    }
  },
  "OpenTelemetry": {
    "UseConsoleExporter": true,
    "UseOtlpExporter": false
  },
  "Cors": {
    "AllowedOrigins": ["*"]
  },
  "HealthChecks": {
    "Database": {
      "Enabled": true
    },
    "Memory": {
      "Enabled": true
    },
    "Redis": {
      "Enabled": false
    }
  }
}