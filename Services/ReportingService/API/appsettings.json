{
  "Api": {
    "Title": "Reporting Service API",
    "Version": "v1",
    "Description": "REST API for business intelligence and reporting services. Provides endpoints for sales analytics, inventory snapshots, and promotion effectiveness metrics.",
    "Contact": {
      "Name": "Reporting Service Team",
      "Email": "reporting-service@company.com"
    },
    "License": {
      "Name": "MIT",
      "Url": "https://opensource.org/licenses/MIT"
    },
    "TermsOfService": "https://company.com/terms"
  },
  "Authentication": {
    "Jwt": {
      "SecretKey": "your-secret-key-must-be-at-least-32-characters-long-for-reporting-service-api-security",
      "Issuer": "ReportingService",
      "Audience": "ReportingService-API",
      "ExpiryMinutes": 60,
      "ValidateIssuer": true,
      "ValidateAudience": true,
      "ValidateLifetime": true,
      "ValidateIssuerSigningKey": true
    },
    "ApiKey": {
      "Enabled": false,
      "HeaderName": "X-API-Key",
      "ApiKeys": []
    }
  },
  "Cors": {
    "AllowedOrigins": ["https://localhost:3000", "https://reporting-dashboard.com", "https://localhost:5237", "https://localhost:7004", "http://localhost:5001", "http://localhost:7001"],
    "AllowedMethods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"],
    "AllowedHeaders": ["Content-Type", "Authorization", "X-Correlation-ID", "X-API-Key"],
    "AllowCredentials": true,
    "ExposedHeaders": ["X-Correlation-ID"]
  },
  "RateLimiting": {
    "PermitLimit": 200,
    "Window": "00:01:00",
    "QueueLimit": 20,
    "AutoReplenishment": true
  },
  "SecurityHeaders": {
    "EnableHsts": true,
    "HstsMaxAge": 31536000,
    "ContentSecurityPolicy": "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https:; style-src 'self' 'unsafe-inline' https:; font-src 'self' https: data:; img-src 'self' https: data:; connect-src 'self' https: wss: ws:;",
    "EnableXFrameOptions": true,
    "XFrameOptions": "DENY",
    "EnableXContentTypeOptions": true,
    "EnableReferrerPolicy": true,
    "ReferrerPolicy": "strict-origin-when-cross-origin"
  },
  "Validation": {
    "ValidateOnStartup": true,
    "StrictMode": true
  },
  "Documentation": {
    "UseScalar": true,
    "UseSwagger": false,
    "IncludeXmlComments": true
  },
  "Cache": {
    "KeyPrefix": "reportingapi:",
    "DefaultExpiration": "01:00:00"
  },
  "ConnectionStrings": {
    "Redis": "localhost:6379"
  },
  "OpenTelemetry": {
    "ServiceName": "ReportingService.API",
    "ServiceVersion": "1.0.0",
    "Exporters": {
      "Console": {
        "Enabled": true
      },
      "Otlp": {
        "Enabled": false,
        "Endpoint": "http://localhost:4317",
        "Headers": ""
      }
    },
    "Logging": {
      "Enabled": true,
      "IncludeFormattedMessage": true,
      "IncludeScopes": true,
      "ParseStateValues": true
    },
    "Tracing": {
      "Enabled": true,
      "AspNetCore": true,
      "HttpClient": true,
      "EntityFrameworkCore": true,
      "AdditionalSources": []
    },
    "Metrics": {
      "Enabled": true,
      "AspNetCore": true,
      "HttpClient": true,
      "Runtime": true,
      "AdditionalMeters": []
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "BuildingBlocks.API": "Information"
    }
  },
  "Email": {
    "Provider": "Smtp",
    "DefaultFromAddress": "noreply@reportingservice.com",
    "Smtp": {
      "Host": "smtp.gmail.com",
      "Port": 587,
      "Username": "",
      "Password": "",
      "EnableSsl": true
    }
  },
  "AllowedHosts": "*"
} 